#keyword_manager/.env

# --- Core Settings ---
PROJECT_NAME="Minbar Keyword Manager"
API_V1_STR=/api/v1
LOG_LEVEL=INFO

# --- Database Settings (MongoDB) ---      
MONGO_URI=
MONGO_DB_NAME=minbar_keywords
MONGO_COLLECTION_CONCEPTS="concepts"

# --- LLM Settings (Google Gemini) ---
GEMINI_API_KEY=""
GEMINI_LLM_MODEL="gemini-2.0-flash"
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS_GENERATION=150
LLM_MAX_TOKENS_TRANSLATION=50

# --- Service Logic Settings ---
LOW_YIELD_THRESHOLD=0.3
KEYWORD_DEACTIVATION_THRESHOLD=0.2
SCORE_DECAY_FACTOR=0.95
CONFIDENCE_DECAY_ENABLED=True
CONFIDENCE_DECAY_PERIOD_DAYS=14
CONFIDENCE_TIME_DECAY_FACTOR=0.98

# --- Scheduler Settings ---
SCHEDULER_INTERVAL_MINUTES=30

# --- CORS ---
# BACKEND_CORS_ORIGINS=